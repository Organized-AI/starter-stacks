{
  "name": "@starter-stacks/stack-evaluator",
  "version": "1.0.0",
  "description": "AI Tool Stack Evaluator - Find the perfect tech stack for your AI project",
  "type": "module",
  "workspaces": [
    "web",
    "cli"
  ],
  "scripts": {
    "dev": "npm run dev -w web",
    "build": "npm run build:lib && npm run build:web && npm run build:cli",
    "build:lib": "tsc -p tsconfig.lib.json",
    "build:web": "npm run build -w web",
    "build:cli": "npm run build -w cli",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "benchmark": "node benchmarks/index.js"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "@playwright/test": "^1.41.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/organized-ai/stack-evaluator"
  },
  "keywords": [
    "ai",
    "tech-stack",
    "evaluator",
    "developer-tools",
    "recommendation-engine"
  ],
  "author": "Organized AI",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}